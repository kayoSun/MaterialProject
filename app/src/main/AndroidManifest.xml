<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kayo.materialproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.FunctionListActivity" />
        <activity
            android:name=".activity.RefreshActivity"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".flux.view.FluxActivity"
            android:theme="@style/SplashTheme" />
        <activity android:name=".flux.view.BaseFluxActivity" />
        <activity
            android:name=".activity.SlidingActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.TempActivity"></activity>
    </application>

</manifest>